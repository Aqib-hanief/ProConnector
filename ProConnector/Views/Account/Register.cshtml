
@{
    ViewBag.Title = "Register";
}

<section class="container">
    <h1 class="large text-primary">
        Sign Up
    </h1>
    <p class="lead"><i class="fas fa-user"> Create your Account</i></p>
    <form class="form">
        <div class="form-group">
            <input type="text" placeholder="Name" class="form-control" required />
        </div>
        <div class="form-group">
            <input type="email" placeholder="Email Address" class="form-control" required />
        </div>
        <div class="form-group">
            <input type="password" placeholder="Password" class="form-control" minlength="6"/>
        </div>
        <div class="form-group">
            <input type="password" placeholder="Confirm Password" class="form-control" minlength="6" />
        </div>
        <input type="submit" value="Register" class="btn btn-primary" />
    </form>

    <p class="my-1">
        Already have an account? <a href="#">Sign In</a>
    </p>
</section>

